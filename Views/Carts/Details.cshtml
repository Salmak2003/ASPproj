@model ASPproj.Models.Cart

@{
    ViewData["Title"] = "Cart Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center text-primary">@ViewData["Title"]</h1>
            <hr />

            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Cart Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold text-end">Customer ID:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerId)</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
