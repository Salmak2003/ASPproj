@model ASPproj.Models.Cart

@{
    ViewData["Title"] = "Delete Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center text-danger">@ViewData["Title"]</h1>
            <h4 class="text-center text-muted">Are you sure you want to delete this cart?</h4>
            <hr />

            <div class="border p-4 bg-light shadow-sm rounded">
                <h5 class="mb-3">Cart Details</h5>
                <dl class="row">
                    <dt class="col-sm-4 fw-bold text-end">Customer ID:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerId)</dd>
                </dl>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
