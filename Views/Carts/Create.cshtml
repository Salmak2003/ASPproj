@model ASPproj.Models.Cart

@{
    ViewData["Title"] = "Create Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <h4 class="text-muted text-center">Add a new cart</h4>
            <hr />

            <form asp-action="Create" class="border p-4 bg-light shadow-sm rounded">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Id" class="form-label">Cart ID</label>
                    <input asp-for="Id" class="form-control" placeholder="Enter Cart ID" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CustomerId" class="form-label">Customer ID</label>
                    <input asp-for="CustomerId" class="form-control" placeholder="Enter Customer ID" />
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
